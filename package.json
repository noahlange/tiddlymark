{
  "name": "tiddlymark",
  "description": "TiddlyWiki starter with an eye on Markdown content",
  "repository": {
    "url": "https://github.com/noahlange/tiddlymark"
  },
  "author": "Noah Lange <noahrlange@gmail.com>",
  "version": "0.4.0",
  "bin": {
    "tiddlymark": "bin/serve"
  },
  "scripts": {
    "build": "webpack --no-stats && node tasks/index.js",
    "dev": "npm run build && npm run start",
    "dist": "NODE_ENV=production npm run build",
    "types": "tsc --noEmit",
    "lint": "eslint --fix '{plugins/!(.)*,tasks,types}/**/*.{js,ts}'",
    "pretty": "prettier --write '{plugins/!(.)*,tasks,types}/**/*.{js,ts}'"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.1",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.11.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-numeric-separator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@prettier/plugin-xml": "^0.12.0",
    "@types/node": "^14.14.3",
    "@types/prettier": "^2.1.5",
    "@types/sass": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.0.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.1.1",
    "fs-extra": "^8.1.0",
    "monaco-editor": "^0.24.0",
    "ora": "^4.0.2",
    "prettier": "^2.1.2",
    "sass.js": "^0.11.1",
    "simple-markdown": "^0.7.2",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.1",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0",
    "webpack-merge": "^5.2.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.2",
    "mkdirp": "^0.5.5",
    "tiddlywiki": "5.1.23"
  }
}
